<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_cdscriptegrator</name>
	<author>Daniel Rataj</author>
	<creationDate>November 5th, 2012</creationDate>
